<div class="container mt-3">
<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.category %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
</div>
<br>
<br>
<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>
<br>
<%= link_to "Back to all restaurants", restaurants_path, class: "btn btn-primary" %>

<%= link_to "New review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
